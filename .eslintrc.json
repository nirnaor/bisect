{
	"extends": ["eslint:recommended", "google", "plugin:react/recommended"],
	"env": {
		"es6" : true,
		"node" : true
	},
	"rules": {
        "semi": [2, "never"],
        "prefer-template": 2,
        "no-tabs": 0,
        "react/jsx-no-bind": 2,
        "no-console": [0],
        "require-jsdoc": [0],
        "react/jsx-uses-vars": "error"
	},
	"plugins": [
		"react"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
            "jsx": true,
            "arrowFunctions": true,
            "binaryLiterals": true,
            "blockBindings": true,
            "classes": true
		}
	}
}
